# help: xbindkeys -k

# Screen brightness
"xbacklight -inc 5%"
	XF86MonBrightnessUp

"xbacklight -dec 5%"
	XF86MonBrightnessDown

# Volume mixer
"pamixer -u -i 2"
	XF86AudioRaiseVolume

"pamixer -u -d 2"
	XF86AudioLowerVolume

"pamixer --toggle-mute"
	XF86AudioMute

# Media control
"playerctl play-pause"
	XF86AudioPlay

"playerctl next"
	XF86AudioNext

"playerctl previous"
	XF86AudioPrev
